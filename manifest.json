{
  "manifest_version": 3,
  "name": "Link Rotator",
  "version": "1.0",
  "description": "Automatically rotates between a list of URLs with ad waiting functionality",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Rotator"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}